<!-- views/partials/level3.ejs -->

<h2>
    <%= connectedUser.texteAccueil %>
</h2>
<div class="jumbotron">
    <form action="/account" method="post">
        <div class="form-group row">
            <label for="texteAccueil" class="col-sm-2 col-form-label">Message</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="texteAccueil" name="texteAccueil" required>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<div class="jumbotron">
    <form action="/account" method="post">
        <div class="form-group row">
            <label for="password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="password" name="password" required>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<div class="jumbotron">
    <table class="table">
        <thead>
            <tr>
                <% for (let key in users[0]) { %>
                    <th>
                        <%= key %>
                    </th>
                    <% } %>
            </tr>
        </thead>
        <tbody>
            <% for (let i=0; i < users.length; i++) { %>
                <tr>
                    <% for (let key in users[i]) { %>
                        <td>
                            <%= users[i][key] %>
                        </td>
                        <% } %>
                </tr>
                <% } %>
        </tbody>
    </table>
</div>